<h1>New Post</h1>
<form action="/posts" method="POST">
  <label for="post_title">Title:</label><br>
  <input id="post_title" name="post[title]" type="text" value="<%= @post.title %>" /><br>
  <label for="post_body">Body:</label><br>
  <textarea id="post_body" name="post[body]" rows="5"><%= @post.body %></textarea><br>
  <input id="submit" type="submit" value="Create new post">
</form>
